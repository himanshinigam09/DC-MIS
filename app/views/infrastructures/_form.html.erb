<html>

<head>

<!--Tabs-->
<meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" type="text/css" href="nav.css" />
    
    
 <script type="text/javascript" src="nav.js"></script>
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
<style>
a:hover
{
    background: transparent;
}
  </style>
    

</head>
<body>
        <center><h1 style="color:#B8B8B8  ;font-family:verdanax;text-shadow:  4px 4px 4px #C0C0C0 ;">Books </h1></center>

<div class="container">

  <div class="row">

   

        <div class="wizard">
            <div class="wizard-inner">
                <div class="connecting-line"></div>
                <ul class="nav nav-tabs" role="tablist">

                    <li role="presentation" class="active">
                        <a href="#step1" data-toggle="tab" aria-controls="step1" role="tab" title="Step 1">
                            <span class="round-tab">
                                <i class="glyphicon glyphicon-pencil"></i>
                            </span>
                        </a>
                    </li>

                    <li role="presentation" class="disabled">
                        <a href="#step2" data-toggle="tab" aria-controls="step2" role="tab" title="Step 2">
                            <span class="round-tab">
                                <i class="glyphicon glyphicon-pencil"></i>
                            </span>
                        </a>
                    </li>
                    <li role="presentation" class="disabled">
                        <a href="#step3" data-toggle="tab" aria-controls="step3" role="tab" title="Step 3">
                            <span class="round-tab">
                                <i class="glyphicon glyphicon-pencil"></i>
                            </span>
                        </a>
                    </li>

                    <li role="presentation" class="disabled">
                        <a href="#complete" data-toggle="tab" aria-controls="complete" role="tab" title="Complete">
                            <span class="round-tab">
                                <i class="glyphicon glyphicon-ok"></i>
                            </span>
                        </a>
                    </li>
                </ul>
            </div>

           
            <div style="box-shadow:10px 10px 40px 30px #F7F7F7 inset;border:solid; border-color:#F5F5F5;border-radius:25px;">
              <div class="form">

                  <%= form_for @book, url: infrastructures_path do |f| %>
                   <% if @book.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

                <ul>
                <% @book.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
                </ul>
              </div>
            <% end %>
  
  
                <div class="tab-content">
                    <div class="tab-pane active" role="tabpanel" id="step1">
                         <%= f.text_field :title, class: 'form-control', :placeholder => "Title" %>
                        <%= f.text_field :edition, class: 'form-control', :placeholder => "edition"   %>
 
    
    
                        
                          
                        
   
                        <ul class="list-inline pull-right">
                            <li><button type="button" class="btn btn-default btn-block next-step">Skip</button></li>
                            <li><button type="button" class="btn btn-primary btn-block next-step">Save and continue</button></li>
                        </ul>
                    </div>
                    <div class="tab-pane" role="tabpanel" id="step2">
                         <%= f.text_field :author, class: 'form-control', :placeholder => "Author" %>
                        
                      
                       
                        <%= f.text_field :publication, class: 'form-control', :placeholder => "Publication"   %>
                        <ul class="list-inline pull-right">
                            <li><button type="button" class="btn btn-default btn-block prev-step">Previous</button></li>
                            <li><button type="button" class="btn btn-default btn-block next-step">Skip</button></li>
                            <li><button type="button" class="btn btn-primary btn-block next-step">Save and continue</button></li>
                        </ul>
                    </div>
                    <div class="tab-pane" role="tabpanel" id="step3">
                        
                         
                          <%= f.text_field :ISBN_number, class: 'form-control', :placeholder => "ISBN Number"   %>
                        
                        <ul class="list-inline pull-right">
                            <li><button type="button" class="btn btn-default btn-block prev-step">Previous</button></li>
                            <li><button type="button" class="btn btn-default btn-block next-step">Skip</button></li>
                            <li><button type="button" class="btn btn-primary btn-block btn-info-full next-step">Save and continue</button></li>
                        </ul>
                    </div>
                    <div class="tab-pane" role="tabpanel" id="complete" style="font-family: Verdana;">

                    
                        <h3>Complete</h3>
                        <p>You have successfully completed all steps.</p>
                      <div class="actions ">
                      <%= f.submit nil, :class => 'btn btn-primary btn-block' %>
                    </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            <% end %>
        </div>
   
   </div>
</div>
</div>
</div>

</body>
</html>