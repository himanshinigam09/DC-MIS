

<html>  
<head>
<style>
$(document).ready ( 
  $("#book").bind "ajax:success", (evt, data, status, xhr) ->
    $("#loader").hide()
    $("#display_result").html xhr.responseText
  $("#book").bind "ajax:error", (xhr, status, error) ->
    $("#loader").hide()
    #Give an alert message
  $("#book").bind "ajax:before", (evt, data, status, xhr) ->
    $("#loader").show()
);
</style>



</head>  

<body>


    <div class="container">

        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header"><b>Project Details</b></h1>
                <ol class="breadcrumb">
                  <p id="notice"><%= notice %></p>

        <p>
          <b>Book Title :&nbsp;</b>
          <%= @book.title %>
        </p>
        <br>

        <p>
          <b>Author :&nbsp;</b>
          <%= @book.author %>
        </p>
        <br>

        <p>
          <b>Edition :&nbsp;</b>
          <%= @book.edition %>
        </p>
        <br>

        <p>
          <b>Publication :&nbsp;</b>
          <%= @book.publication %>
        </p>
        <br>

        <p>
          <b>ISBN Number :&nbsp;</b>
          <%= @book.ISBN_number %>
        </p>
        <br>
        
        </ol>
        </div>
        </div>
    </div>
    
</body>
</html>