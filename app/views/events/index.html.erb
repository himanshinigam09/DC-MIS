<html>

<body>
    
<!-- Page Content -->

    <div class="container">

        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12"><br/><br/>
                <h1 class="page-header">Departments
                    
                </h1>
                <ol class="breadcrumb">
                    <li><a href="dcs.html">Home</a>
                    </li>
                    <li class="active">Departments</li>
                </ol>
            </div>
        </div>
        <!-- /.row -->

        <!-- Content Row -->
        <div class="row">
            <!-- Sidebar Column -->
            <div class="col-md-2">
                <div class="list-group">
                    <a href="events.html" class="list-group-item">Events</a>
                    <a href="infrastructures.html" class="list-group-item">Infrastructure</a>
                    <a href="profiles.html" class="list-group-item">Human Resource</a>
                    <a href="projects.html" class="list-group-item">Project</a>
                    <a href="correspondences.html" class="list-group-item">Correspondence</a>
                    <a href="publications.html" class="list-group-item">Publications</a>
                    
                </div>
            </div>
            <!-- Content Column -->


             <div class="col-md-9">

                <h1><b>Listing Events</b></h1><br>

                <table cellspacing='0'>
                <tr>
                <th>Type of event</th>
                <th>Organizer</th>
                <th>Topic</th>
                <th>Venue</th>
                <th>Date</th>
                <th>Time</th>
                <th>Duration</th>
                <th>Material link</th>
                <th>Summary link</th>
                <th></th>
                <th></th>
                <th></th>
                </tr>

                <% @events.each do |event| %>
                <tr>
                <td><%= event.type_of_event %></td>
                <td><%= event.organizer_id %></td>
                <td><%= event.topic %></td>
                <td><%= event.venue %></td>
                <td><%= event.date %></td>
                <td><%= event.time %></td>
                <td><%= event.duration %></td>
                <td><%= event.material_link %></td>
                <td><%= event.summary_link %></td>
                <td><%= link_to 'Show', event %></td>
                <td><%= link_to 'Edit', edit_event_path(event) %></td>
                <td><%= button_to 'Destroy', event_path(event), method: :delete, :onclick=> "return confirm('Are you sure you want to delete this item?')" %></td>
                </tr>
                <% end %>
                </table>

                <br />




                <%= link_to 'New Event', new_event_path %><br/>
                <%= paginate @events %>
<br/>
            </div>
        </div>
    </div>
</body>
</html>
