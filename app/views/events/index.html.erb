<div class="col-sm-9 col-md-10 main " >
<h1 class="page-header" style="sans-serif;text-transform: capitalize;">
Listing Events</h1>
<div class="panel-group" id="accordion" style="background-color:white;">
<div class="row placeholders">
<div class="col-lg-11">

	<!--search-->
    <%= form_tag events_path, :method => 'get' do %>  
      <p>  
        <%= text_field_tag :search, params[:search], :placeholder => 'Enter event topic' %>  
        <%= submit_tag "Search", :name => nil %>  
      </p>  
    <% end %>  
<table cellspacing='0'>
<tr>
<th>Type of event</th>
<th>Organizer</th>
<th>Topic</th>
<th>Venue</th>
<th>Date</th>
<th></th>
<th></th>
<th></th>
</tr>
<% @events.each do |event| %>
<tr>
<td><%= event.type_of_event %></td>
<td><%= event.organizer_name %></td>
<td><%= event.topic %></td>
<td><%= event.venue %></td>
<td><%= event.date %></td>
<td><%= button_to 'Show', event ,method: :get%></td>
<td><%= button_to 'Edit', edit_event_path(event) , method: :get%></td>
<td><%= button_to 'Destroy', event_path(event), method: :delete, :onclick=> "return confirm('Are you sure you want to delete this item?')"%></td>
</tr>
<% end %>
</table>
<br />
<%= button_to 'Add Event', new_event_path, method: :get, :class => 'btn btn-primary' %><br/>
<%= paginate @events %>
</div>
