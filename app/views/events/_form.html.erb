<html>

<head>

<!--Tabs-->
<meta charset="utf-8">
 <link rel="stylesheet" type="text/css" href="nav.css" />
    
    
 <script type="text/javascript" src="nav.js"></script>
 
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
<script type="text/javascript">
   $(document).ready(function(){
    $('.navbar .dropdown').hover(function() {
        $(this).find('.dropdown-menu').first().stop(true, true).delay(250).slideDown();
    }, function() {
        $(this).find('.dropdown-menu').first().stop(true, true).delay(100).slideUp()
    });
n})
   </script>
<style>
a:hover
{
    background: transparent;
}
  </style>
    

</head>
<body>
   <br/><br/>       <center><h1 style="color:black;font-family:verdanax;">Events </h1></center>

<div class="container">

  <div class="row">

   

        <div class="wizard">
            <div class="wizard-inner">
                <div class="connecting-line"></div>
                <ul class="nav nav-tabs" role="tablist">

                    <li role="presentation" class="active">
                        <a href="#step1" data-toggle="tab" aria-controls="step1" role="tab" title="Step 1">
                            <span class="round-tab">
                                <i class="glyphicon glyphicon-pencil"></i>
                            </span>
                        </a>
                    </li>

                    <li role="presentation" class="disabled">
                        <a href="#step2" data-toggle="tab" aria-controls="step2" role="tab" title="Step 2">
                            <span class="round-tab">
                                <i class="glyphicon glyphicon-pencil"></i>
                            </span>
                        </a>
                    </li>
                    <li role="presentation" class="disabled">
                        <a href="#step3" data-toggle="tab" aria-controls="step3" role="tab" title="Step 3">
                            <span class="round-tab">
                                <i class="glyphicon glyphicon-pencil"></i>
                            </span>
                        </a>
                    </li>

                    <li role="presentation" class="disabled">
                        <a href="#complete" data-toggle="tab" aria-controls="complete" role="tab" title="Complete">
                            <span class="round-tab">
                                <i class="glyphicon glyphicon-ok"></i>
                            </span>
                        </a>
                    </li>
                </ul>
            </div>

           
            <div style="box-shadow:10px 10px 40px 30px #F7F7F7 inset;border:solid; border-color:#F5F5F5;border-radius:25px;">
              <div class="form">

                  <%= form_for(@event) do |f| %>
                   <% if @event.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

                <ul>
                <% @event.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
                </ul>
              </div>
            <% end %>
  
  
                <div class="tab-content">
                    <div class="tab-pane active" role="tabpanel" id="step1">
                         <%= f.text_field :type_of_event, class: 'form-control', :placeholder => "Type of event" %>
  
 
    
    
                        <%= f.text_field :organizer_name, class: 'form-control', :placeholder => "Organizer Name" %>
                        
                          
                        <%= f.text_field :topic, class: 'form-control', :placeholder => "Topic"   %>
   
   
                        <ul class="list-inline pull-right">
                            <li><button onClick="location.href='/events'" type="button" class="btn btn-default btn-block next-step" >Back</button></li>
                            <li><button type="button" class="btn btn-primary btn-block next-step">Save and continue</button></li>
                             
                        </ul>
                    </div>
                    <div class="tab-pane" role="tabpanel" id="step2">
                         <%= f.text_field :venue, class: 'form-control', :placeholder => "Venue"   %>
    
  
    
    
                        <%= f.date_select :date, class: 'form-control', :placeholder => "Date"   %><br/><br/>
                        
                      
                       
                        <%= f.time_select :time, class: 'form-control', :placeholder => "Time"   %>
                        <ul class="list-inline pull-right">
                            <li><button type="button" class="btn btn-default btn-block prev-step">Previous</button></li>
                            
                            <li><button type="button" class="btn btn-primary btn-block next-step">Save and continue</button></li>
                        </ul>
                    </div>
                    <div class="tab-pane" role="tabpanel" id="step3">
                        <%= f.text_field :duration, class: 'form-control', :placeholder => "Duration"   %>
  
   
                          <%= f.text_field :material_link, class: 'form-control', :placeholder => "Material link"   %>
                        
                         
                          <%= f.text_field :summary_link, class: 'form-control', :placeholder => "Summary link"   %>
                        
                        <ul class="list-inline pull-right">
                            <li><button type="button" class="btn btn-default btn-block prev-step">Previous</button></li>
                            
                            <li><button type="button" class="btn btn-primary btn-block btn-info-full next-step">Save and continue</button></li>
                        </ul>
                    </div>
                    <div class="tab-pane" role="tabpanel" id="complete" style="font-family: Verdana;">

                    
                        <h3>Complete</h3>
                        <p>You have successfully completed all steps.</p>
                      <div class="actions ">

                      <%= f.submit nil, :class => 'btn btn-primary btn-block' %>

                    </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            <% end %>
        </div>
   
   </div>
</div>
</div>
</div>

</body>
</html>