</head>
<body>
<!-- Navigation -->
<div class="container-fluid">
<div class="row row-offcanvas row-offcanvas-left">
<div class="col-sm-3 col-md-2 sidebar-offcanvas" id="sidebar" role="navigation">
<ul class="nav nav-sidebar">

    <li class="active"  ><a href="/events">Events</a></li>
        <li><a href="/profiles">Human Resource</a></li>
        <li><a href="/projects">Projects</a></li>
        <li><a href="/correspondences">Correspondence</a></li>
        <li><a href="/publications">Publications</a></li>
        <li ><a data-toggle="collapse" style="color:#666;"  href="#accordion-sample-two">
               Infrastructure <b class="caret"></b>
             </a></li>
          
         
       <div id="accordion-sample-two" class="panel-collapse collapse">
         
         <ul class="nav nav-sidebar">
           <li><a href="/books">&nbsp;&nbsp;&nbsp;&nbsp; Books </a></li>
            <li><a href="/system_informations">&nbsp;&nbsp;&nbsp;&nbsp; System Information </a></li>
             <li><a href="/issue_resources">&nbsp;&nbsp;&nbsp;&nbsp; Issue Resource </a></li></ul>
         
       </div>
</ul>
</div>
<div class="col-sm-9 col-md-10 main " >
<center><h1 style="color:black;font-family:verdanax;">Event Details</h1></center>


<div class="wizard">
    <div class="wizard-inner">
      <div class="connecting-line">
        </div>
                <ul class="nav nav-tabs" role="tablist">

                    <li role="presentation" class="active">
                        <a href="#step1" data-toggle="tab" aria-controls="step1" role="tab" title="Step 1">
                            <span class="round-tab">
                                <i >Step 1</i>
                            </span>
                        </a>
                    </li>

                    <li role="presentation" class="disabled">
                        <a href="#step2" data-toggle="tab" aria-controls="step2" role="tab" title="Step 2">
                            <span class="round-tab">
                                <i >Step 2</i>
                            </span>
                        </a>
                    </li>
                    <li role="presentation" class="disabled">
                        <a href="#step3" data-toggle="tab" aria-controls="step3" role="tab" title="Step 3">
                            <span class="round-tab">
                                <i >Step 3</i>
                            </span>
                        </a>
                    </li>

                    <li role="presentation" class="disabled">
                        <a href="#complete" data-toggle="tab" aria-controls="complete" role="tab" title="Complete">
                            <span class="round-tab">
                                <i class="glyphicon glyphicon-ok"></i>
                            </span>
                        </a>
                    </li>
                </ul>
      </div>

           
      <div style="box-shadow:10px 10px 40px 30px #F7F7F7 inset;border:solid; border-color:#F5F5F5;border-radius:25px;padding-bottom:70px;">
        <div class="form">

                  <%= form_for(@event) do |f| %>
                   <% if @event.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

                <ul>
                <% @event.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
                </ul>
              </div>
              <% end %>
          <div class="tab-content">
            <div class="tab-pane active" role="tabpanel" id="step1">
                         
                         <%= label_tag("Event Type :  ")%>
                        
                         <%= f.select :type_of_event, options_for_select(%w[Conference Presentation Seminar Test Workshop]), {}, class: "form-control" %>
                          

  
 
    
    
                        <%= f.text_field :organizer_name, class: 'form-control', :placeholder => "Organizer Name" %>
                        
                          
                        <%= f.text_field :topic, class: 'form-control', :placeholder => "Topic"   %>
   
   
                        <ul class="list-inline pull-right">
                            <li><button onClick="location.href='/events'" type="button" class="btn btn-default btn-block " >Back</button></li>
                           <li><button type="button" class="btn btn-primary btn-block next-step">Save and continue</button></li>
                             
                        </ul>
            </div>
            <div class="tab-pane" role="tabpanel" id="step2">
                         <%= f.text_field :venue, class: 'form-control', :placeholder => "Venue"   %>
    
  
    
    
                        <%= label_tag("Date :  ")%><%= f.date_select :date, class: 'form-control', :placeholder => "Date"   %><br/><br/>
                        
                      
                       
                        <%= label_tag("Time :  ")%><%= f.time_select :time, class: 'form-control', :placeholder => "Time"   %>
                        <ul class="list-inline pull-right">
                            <li><button type="button" class="btn btn-default btn-block prev-step">Previous</button></li>
                            
                            <li><button type="button" class="btn btn-primary btn-block next-step">Save and continue</button></li>
                        </ul>
            </div>
            <div class="tab-pane" role="tabpanel" id="step3">
                        <%= f.text_field :duration, class: 'form-control', :placeholder => "Duration"   %>
  
   
                          <%= f.text_field :material_link, class: 'form-control', :placeholder => "Material link"   %>
                        
                         
                          <%= f.text_field :summary_link, class: 'form-control', :placeholder => "Summary link"   %>
                        
                        <ul class="list-inline pull-right">
                            <li><button type="button" class="btn btn-default btn-block prev-step">Previous</button></li>
                            
                            <li><button type="button" class="btn btn-primary btn-block btn-info-full next-step">Save and continue</button></li>
                        </ul>
            </div>
            <div class="tab-pane" role="tabpanel" id="complete" style="font-family: Verdana;">

                    
                        <h3>Complete</h3>
                        <p>You have successfully completed all steps.</p>
                      <div class="actions ">

                      <%= f.submit nil, :class => 'btn btn-primary btn-block' %>
                      </div>
                      
                      <button onClick="location.href='/events'" type="button">Back</button>
                      <br /><br /><br />
            </div>
            <div class="clearfix"></div>
          </div>
          <% end %>
        </div>
      </div>

    </div>
  </div>




</div>
</div>
</div>
 
</body>
</html>
