                          <li><%= msg %></li>
                        <% end %>
                        </ul>
                      </div>
                    <% end %>
  
  
                <div class="tab-content">
                    <div class="tab-pane active" role="tabpanel" id="step1">
                        <%= f.text_field :publication_name, class: 'form-control', :placeholder => "Name of Publication" %>
 
                        <%= f.text_field :level, class: 'form-control', :placeholder => "Level of publication" %>
                     
                        <%= f.text_field :organizer_name, class: 'form-control', :placeholder => "Organizer's name" %>
                     
                        <%= f.text_field :sponsers_name, class: 'form-control', :placeholder => "Sponser's name" %>
                     
                       
   
                        <ul class="list-inline pull-right">
                            <li><button onClick="location.href='/publications'" type="button" class="btn btn-default btn-block next-step" >Back</button></li>
                            <li><button type="button" class="btn btn-primary btn-block next-step">Save and continue</button></li>
                        </ul>
                    </div>
                    <div class="tab-pane" role="tabpanel" id="step2">
                        
                       <%= f.text_field :location, class: 'form-control', :placeholder => "Location" %>
 
                        <%= f.text_field :paper_id, class: 'form-control', :placeholder => "Paper id" %>
                     
                        <%= f.text_field :paper_title, class: 'form-control', :placeholder => "Paper title" %>
                     
                        <%= f.text_field :date_of_publication, class: 'form-control', :placeholder => "Date of publication" %>
                       
                     
                        <ul class="list-inline pull-right">
                            <li><button type="button" class="btn btn-default btn-block prev-step">Previous</button></li>
                           
                            <li><button type="button" class="btn btn-primary btn-block next-step">Save and continue</button></li>
                        </ul>
                    </div>
                    <div class="tab-pane" role="tabpanel" id="step3">
                        
