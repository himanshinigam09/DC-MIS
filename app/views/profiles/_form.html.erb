<html>
<head>
<title>Profiles</title>
<!--Tabs-->
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet">
<link rel="stylesheet" type="text/css" href="nav.css" />
<script type="text/javascript" src="nav.js"></script>
<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
<style>
a:hover
{
background: transparent;
}
</style>
</head>
<body>
<br/><br/> <center><h1 style="color:black ;font-family:verdanax;">DC Member Details </h1></center>
<div class="container">
<div class="row">
<div class="wizard">
<div class="wizard-inner">
<div class="connecting-line"></div>
<ul class="nav nav-tabs" role="tablist">
<li role="presentation" class="active">
<a href="#step1" data-toggle="tab" aria-controls="step1" role="tab" title="Step 1">
<span class="round-tab">
<i >Step 1</i>
</span>
</a>
</li>
<li role="presentation" class="disabled">
<a href="#step2" data-toggle="tab" aria-controls="step2" role="tab" title="Step 2">
<span class="round-tab">
  <i >Step 2</i>
</span>
</a>
</li>
<li role="presentation" class="disabled">
<a href="#step3" data-toggle="tab" aria-controls="step3" role="tab" title="Step 3">
<span class="round-tab">
<i >Step 3</i>
</span>
</a>
</li>
<li role="presentation" class="disabled">
<a href="#complete" data-toggle="tab" aria-controls="complete" role="tab" title="Complete">
<span class="round-tab">
<i class="glyphicon glyphicon-ok"></i>
</span>
</a>
</li>
</ul>
</div>
<div style="box-shadow:10px 10px 40px 30px #F7F7F7 inset;border:solid; border-color:#F5F5F5;border-radius:25px;padding-bottom:70px;">
<div class="form">
<%= form_for((@profile), html: { multipart: true }) do |f| %>
<% if @profile.errors.any? %>
<div id="error_explanation">
<h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>
<ul>
<% @profile.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
</ul>
</div>
<% end %>
<div class="tab-content">
  <div class="tab-pane active" role="tabpanel" id="step1">
<%= f.text_field :full_name, class: 'form-control', :placeholder => "Full name" %>

<%= f.text_field :date_of_birth, class: 'form-control', :placeholder => "Date of birth" %>
<%= f.text_field :gender, class: 'form-control', :placeholder => "Gender" %>
<%= f.text_field :blood_group, class: 'form-control', :placeholder => "Blood group" %>
<%= f.text_field :local_address, class: 'form-control' , :placeholder => "Local address" %>
<%= f.text_field :permanent_address, class: 'form-control' , :placeholder => "Permanent addresss" %>
<ul class="list-inline pull-right">
<li><button onClick="location.href='/profiles'" type="button" class="btn btn-default btn-block " >Back</button></li>
<li><button type="button" class="btn btn-primary btn-block next-step">Save and continue</button></li>
</ul>
</div>
<div class="tab-pane" role="tabpanel" id="step2">

<%= f.text_field :father_name, class: 'form-control', :placeholder => "Father's name" %>
<%= f.text_field :mother_name, class: 'form-control', :placeholder => "Mother's name" %>
<%= f.text_field :guardian_name, class: 'form-control', :placeholder => "Guardian's name" %>
<%= f.text_field :course_name, class: 'form-control' , :placeholder => "Course name" %>
<%= f.text_field :sem_of_joining, class: 'form-control' , :placeholder => "Sem of joining" %>
<%= f.text_field :email, class: 'form-control', :placeholder => "Email" %>
<%= f.text_field :skill, class: 'form-control', :placeholder => "Professional Skill" %>

<ul class="list-inline pull-right">
<li><button type="button" class="btn btn-default btn-block prev-step">Previous</button></li>
<li><button type="button" class="btn btn-primary btn-block next-step">Save and continue</button></li>
</ul>
</div>
<div class="tab-pane" role="tabpanel" id="step3">
<%= f.text_field :github_id, class: 'form-control' , :placeholder => "Github id" %>
<%= f.text_field :linkedin_id, class: 'form-control' , :placeholder => "Linkedin id" %>
<%= f.text_field :facebook_id, class: 'form-control', :placeholder => "Facebook id" %>
<%= f.text_field :googleplus_id, class: 'form-control', :placeholder => "Google+ id" %>
<%= f.text_field :twitter_id, class: 'form-control', :placeholder => "Twitter id" %>
<%= f.text_field :blog_id, class: 'form-control', :placeholder => "Blog id" %>
<%= f.label :image, "Attach an Image" %>
<%= f.file_field :image %>
<p style="white-space: pre-line;"><%= f.text_area :achievement, class: 'form-control', :placeholder => "Achievement" %></p><br/>
<p style="white-space: pre-line;"><%= f.text_area :education, class: 'form-control', :placeholder => "Education" %></p><br/>
<ul class="list-inline pull-right">
<li><button type="button" class="btn btn-default btn-block prev-step">Previous</button></li>
<li><button type="button" class="btn btn-primary btn-block btn-info-full next-step">Save and continue</button></li>
</ul>
</div>
<div class="tab-pane" role="tabpanel" id="complete" style="font-family: Verdana;">
<h3>Complete</h3>
<p>You have successfully completed all steps.</p>
<div class="actions ">
<%= f.submit nil, :class => 'btn btn-primary btn-block' %>
</div>
 <button onClick="location.href='/profiles'" type="button">Back</button>
<br/><br/>
<br/>
</div>
<div class="clearfix"></div>
</div>
<% end %>
</div>
</div>
</div>
</div>
</div>
</body>
</html>