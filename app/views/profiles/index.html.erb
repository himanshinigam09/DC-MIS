<html>
<body>
<!-- Page Content -->
    <div class="container">

        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Departments
                    
                </h1>
                <ol class="breadcrumb">
                    <li><a href="dcs.html">Home</a>
                    </li>
                    <li class="active">Departments</li>
                </ol>
            </div>
        </div>
        <!-- /.row -->

        <!-- Content Row -->
        <div class="row">
            <!-- Sidebar Column -->
            <div class="col-md-2">
                <div class="list-group">
                    <a href="index.html" class="list-group-item">Events</a>
                    <a href="about.html" class="list-group-item">Infrastructure</a>
                    <a href="services.html" class="list-group-item">Human Resource</a>
                    <a href="contact.html" class="list-group-item">Project</a>
                    <a href="correspondences.html" class="list-group-item">Correspondence</a>
                    <a href="portfolio-2-col.html" class="list-group-item">Training</a>
                    <a href="portfolio-3-col.html" class="list-group-item">Software Technical Support</a>
                    <a href="portfolio-4-col.html" class="list-group-item">Hardware and Networking Support</a>
                    <a href="portfolio-item.html" class="list-group-item">Future Enhancements</a>
                    
                </div>
            </div>
            <!-- Content Column -->


             <div class="col-md-9">
            <h1><b>Listing Profiles</b></h1><br>

            <table cellspacing='0'>
            <tr>
            <th>First name</th>
            <th>Mid name</th>
            <th>Last name</th>
            <th>Date of birth</th>
            <th>Gender</th>
            <th>Blood group</th>
            <th>Local address</th>
            <th>Permanent address</th>
            <th>Father name</th>
            <th>Mother name</th>
            <th>Guardian name</th>
            <th>Course name</th>
            <th>Sem of joining</th>
            <th>Email</th>
            <th>Github</th>
            <th>Linkedin</th>
            <th>Facebook</th>
            <th>Googleplus</th>
            <th>Twitter</th>
            <th>Blog</th>
            <th></th>
            <th></th>
            <th></th>
            </tr>

            <% @profiles.each do |profile| %>
            <tr>
            <td><%= profile.first_name %></td>
            <td><%= profile.mid_name %></td>
            <td><%= profile.last_name %></td>
            <td><%= profile.date_of_birth %></td>
            <td><%= profile.gender %></td>
            <td><%= profile.blood_group %></td>
            <td><%= profile.local_address %></td>
            <td><%= profile.permanent_address %></td>
            <td><%= profile.father_name %></td>
            <td><%= profile.mother_name %></td>
            <td><%= profile.guardian_name %></td>
            <td><%= profile.course_name %></td>
            <td><%= profile.sem_of_joining %></td>
            <td><%= profile.email %></td>
            <td><%= profile.github_id %></td>
            <td><%= profile.linkedin_id %></td>
            <td><%= profile.facebook_id %></td>
            <td><%= profile.googleplus_id %></td>
            <td><%= profile.twitter_id %></td>
            <td><%= profile.blog_id %></td>
            <td><%= link_to 'Show', profile %></td>
            <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
            <td><%= button_to 'Destroy', profile, method: :delete, class: :destroy %></td>
            </tr>
            <% end %>
            </table>

            <br />

            <%= link_to 'New Profile', new_profile_path %>
            </div>
        </div>
    </div>
</body>
</html>
