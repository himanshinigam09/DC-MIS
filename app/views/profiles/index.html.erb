<body >

<!-- Navigation -->
 
    
<br/>
 
      <div class="container-fluid" >
      
      <div class="row row-offcanvas row-offcanvas-left" >
      
        
         <div class="col-sm-3 col-md-2 sidebar-offcanvas" id="sidebar" role="navigation" >
           
            <ul class="nav nav-sidebar">
              <li><a href="events.html">Events</a></li>
              <li><a href="infrastructures.html">Infrastructure</a></li>
              <li><a href="profiles.html">Human Resource</a></li>
              <li><a href="projects.html">Projects</a></li>
          <li><a href="correspondences.html">Correspondence</a></li>
          <li><a href="publications.html">Publications</a></li>
            </ul>
            
          
        </div><!--/span-->
        
        <div class="col-sm-9 col-md-10 main " >
          
          <!--toggle sidebar button-->
          
          <br/><br/>
          <h1 class="page-header">
            Listing Profiles
            <% @profiles.each do |profile| %>
  <div class="article">
    <h1 class="article-title"><%= link_to profile.first_name, profile %></h1>
    <%= form_tag(profiles_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Articles" %>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
           of using a Rails form helper -->
      <button class="btn" type="submit"><i class="icon-search"></i></button>
    </div>
  <% end %>
  </div>
<% end %>
          </h1>
          
                <div class="panel-group" id="accordion" style="background-color:white;">
          <div class="row placeholders" >
            <div class="col-lg-11" >
          <!--toggle sidebar button-->
          
         
         
      
          
           
<table cellspacing='0'>
            <tr>
            <th>Name</th>
            
            <th>Date of birth</th>
            
            <th>Address</th>
            
            
            <th>Course name</th>
            
            <th>Email</th>
            <th>Github</th>
            
            <th></th>
            <th></th>
            <th></th>
            </tr>

            <% @profiles.each do |profile| %>
            <tr>
            <td><%= profile.first_name + " " + profile.last_name %></td>
            <td><%= profile.date_of_birth %></td>
            
            <td><%= profile.local_address %></td>
            
            <td><%= profile.course_name %></td>
            
            <td><%= profile.email %></td>
            <td><%= profile.github_id %></td>
            <% if current_user.email == profile.email %> 
            <td><%= button_to 'Show', profile,method: :get %></td>
            <td><%= button_to 'Edit', edit_profile_path(profile),method: :get %></td>
            <td><%= button_to 'Destroy', profile, method: :delete, :onclick=> "return confirm('Are you sure you want to delete this item?')" %></td>
            </tr>
             <% else %> 
             <td><%= button_to 'Show', profile,method: :get %></td>
             <td></td>
            <td></td>
            <% end %>
            <% end %>
            </table>

            <br />

            <%= link_to 'New Profile', new_profile_path %><br/>
                            <%= paginate @profiles %>
      
            </div>
        </div>
    </div>


    
</body>


