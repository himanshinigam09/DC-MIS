<body>
<!-- Page Content -->
    <div class="container">

        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Departments
                    
                </h1>
                <ol class="breadcrumb">
                    <li><a href="dcs.html">Home</a>
                    </li>
                    <li class="active">Departments</li>
                </ol>
            </div>
        </div>
        <!-- /.row -->

        <!-- Content Row -->
        <div class="row">
            <!-- Sidebar Column -->
            <div class="col-md-2">
                <div class="list-group">
                    <a href="index.html" class="list-group-item">Events</a>
                    <a href="about.html" class="list-group-item">Infrastructure</a>
                    <a href="services.html" class="list-group-item">Human Resource</a>
                    <a href="contact.html" class="list-group-item">Project</a>
                    <a href="correspondences.html" class="list-group-item">Correspondence</a>
                    <a href="portfolio-2-col.html" class="list-group-item">Training</a>
                    <a href="portfolio-3-col.html" class="list-group-item">Software Technical Support</a>
                    <a href="portfolio-4-col.html" class="list-group-item">Hardware and Networking Support</a>
                    <a href="portfolio-item.html" class="list-group-item">Future Enhancements</a>
                    
                </div>
            </div>
            <!-- Content Column -->


             <div class="col-md-9">
            <h1><b>Listing Profiles</b></h1><br>

            <table cellspacing='0'>
            <tr>
            <th>Name</th>
            <th>Date of birth</th>
            <th>Gender</th>
            <th>Address</th>
            <th>Course name</th>
            <th>Email</th>
            <th></th>
            <th></th>
            <th></th>
            </tr>

            <% @profiles.each do |profile| %>
            <tr>
            <td><%= profile.first_name + " " + profile.last_name %></td>
            <td><%= profile.date_of_birth %></td>
            <td><%= profile.gender %></td>
            <td><%= profile.local_address %></td>
            <td><%= profile.course_name %></td>
            <td><%= profile.email %></td>
            <td><%= link_to 'Show', profile %></td>
            <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
            <td><%= button_to 'Destroy', profile, method: :delete, class: :destroy %></td>
            </tr>
            <% end %>
            </table>
            <br />

            <%= link_to 'New Profile', new_profile_path %>
            </div>
        </div>
    </div>
</body>
</html>
