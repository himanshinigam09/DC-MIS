<!-- Page Content -->
    <div class="container">

        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12"><br/><br/>
                <h1 class="page-header">Departments
                    
                </h1>
                <ol class="breadcrumb">
                    <li><a href="dcs.html">Home</a>
                    </li>
                    <li class="active">Departments</li>
                </ol>
            </div>
        </div>
        <!-- /.row -->

        <!-- Content Row -->
        <div class="row">
            <!-- Sidebar Column -->
            <div class="col-md-2">
                <div class="list-group">
                    <a href="events.html" class="list-group-item">Events</a>
                    <a href="infrastructures.html" class="list-group-item">Infrastructure</a>
                    <a href="profiles.html" class="list-group-item">Human Resource</a>
                    <a href="projects.html" class="list-group-item">Project</a>
                    <a href="correspondences.html" class="list-group-item">Correspondence</a>
                   <a href="publications.html" class="list-group-item">Publications</a>
                    
                </div>
            </div>
            <!-- Content Column -->


             <div class="col-md-9">
            <h1><b>Listing Profiles</b></h1><br>

            <table cellspacing='0'>
            <tr>
            <th>Name</th>
            
            <th>Date of birth</th>
            
            <th>Address</th>
            
            
            <th>Course name</th>
            
            <th>Email</th>
            <th>Github</th>
            
            <th></th>
            <th></th>
            <th></th>
            </tr>

            <% @profiles.each do |profile| %>
            <tr>
            <td><%= profile.first_name + " " + profile.last_name %></td>
            <td><%= profile.date_of_birth %></td>
            
            <td><%= profile.local_address %></td>
            
            <td><%= profile.course_name %></td>
            
            <td><%= profile.email %></td>
            <td><%= profile.github_id %></td>
            
            <td><%= button_to 'Show', profile,method: :get %></td>
            <td><%= button_to 'Edit', edit_profile_path(profile),method: :get %></td>
            <td><%= button_to 'Destroy', profile, method: :delete, :onclick=> "return confirm('Are you sure you want to delete this item?')" %></td>
            </tr>
            <% end %>
            </table>

            <br />

            <%= link_to 'New Profile', new_profile_path %><br/>
                            <%= paginate @profiles %>

            </div>
        </div>
    </div>
