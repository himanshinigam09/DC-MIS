<div class="col-sm-9 col-md-10 main " >
<h1 class="page-header">Listing Books</h1>
<div class="panel-group" id="accordion" style="background-color:white;">
<div class="row placeholders" >
<div class="col-lg-11" >
<!--toggle sidebar button-->

<!--search-->
<%= form_tag books_path, :method => 'get' do %>  
      <p>  
        <%= text_field_tag :search, params[:search], :placeholder => 'Enter book title' %>  
        <%= submit_tag "Search", :name => nil %>  
      </p>  
    <% end %>  
    
<table cellspacing='0'>
<tr>
<th>Book Title</th>
<th>Author</th>
<th>Edition</th>
<th>Publication</th>
<th>ISBN_number</th>

<th></th>
<th></th>
<th></th>
</tr>
<% @books.each do |book| %>
<tr>
<td><%= book.title %></td>
<td><%= book.author %></td>
<td><%= book.edition %></td>
<td><%= book.publication %></td>
<td><%= book.ISBN_number %></td>

<td><%= button_to 'Show', book ,method: :get%></td>
<td><%= button_to 'Edit', edit_book_path(book) ,method: :get %></td>
<td><%= button_to 'Destroy', book, method: :delete, :onclick=> "return confirm('Are you sure you want to delete this item?')" %></td>
</tr>
<% end %>
</table><br/><br/>
<%= button_to 'Add Book', new_book_path, method: :get, :class => 'btn btn-primary' %><br/>
<%= paginate @books %>

