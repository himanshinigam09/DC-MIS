<% @books.each do |book| %>
<tr>
<td><%= book.title %></td>
<td><%= book.edition %></td>
<td><%= book.author %></td>
<td><%= book.publication %></td>
<td><%= book.ISBN_number %></td>
<td><%= button_to 'Show', book, method: :get %></td>
<td><%= button_to 'Edit', edit_book_path(book) ,method: :get %></td>

<td><%= button_to 'Destroy',book, method: :delete, :onclick=> "return confirm('Are you sure you want to delete this item?')" %></td>
</tr>
<% end %>
</table>
