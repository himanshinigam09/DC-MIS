  .main {
    padding-right: 40px;
    padding-left: 40px;
    height:870px;
  }
}
  </style>
    

</head>
<body>
  <div class="container-fluid">
<div class="row row-offcanvas row-offcanvas-left">
<div class="col-sm-3 col-md-2 sidebar-offcanvas" id="sidebar" role="navigation">
<ul class="nav nav-sidebar">

    <li><a href="/events">Events</a></li>
        <li><a href="/profiles">Human Resource</a></li>
        <li><a href="/projects">Projects</a></li>
        <li class="active"><a href="/correspondences">Correspondence</a></li>
        <li><a href="/publications">Publications</a></li>
        <li ><a data-toggle="collapse" style="color:#666;"  href="#accordion-sample-two">
               Infrastructure <b class="caret"></b>
             </a></li>
          
         
       <div id="accordion-sample-two" class="panel-collapse collapse">
         
         <ul class="nav nav-sidebar">
           <li><a href="/books">&nbsp;&nbsp;&nbsp;&nbsp; Books </a></li>
            <li><a href="/system_informations">&nbsp;&nbsp;&nbsp;&nbsp; System Information </a></li>
             <li><a href="/issue_resources">&nbsp;&nbsp;&nbsp;&nbsp; Issue Resource </a></li></ul>
         
       </div>
</ul>
</div>
<div class="col-sm-9 col-md-10 main " >

      <center><div><h1 style="color:black;font-family:verdanax;">Correspondence Details</h1></center>

   <div class="wizard">
            <div class="wizard-inner">
                <div class="connecting-line"></div>
                <ul class="nav nav-tabs" role="tablist">

                    <li role="presentation" class="active">
                        <a href="#step1" data-toggle="tab" aria-controls="step1" role="tab" title="Step 1">
                            <span class="round-tab">
                                <i>Step 1</i>
                            </span>
                        </a>
                    </li>

                    <li role="presentation" class="disabled">
                        <a href="#step2" data-toggle="tab" aria-controls="step2" role="tab" title="Step 2">
                            <span class="round-tab">
                                <i >Step 2</i>
                            </span>
                        </a>
                    </li>
                    <li role="presentation" class="disabled">
                        <a href="#step3" data-toggle="tab" aria-controls="step3" role="tab" title="Step 3">
                            <span class="round-tab">
                                <i >Step 3</i>
                            </span>
                        </a>
                    </li>

                    <li role="presentation" class="disabled">
                        <a href="#complete" data-toggle="tab" aria-controls="complete" role="tab" title="Complete">
                            <span class="round-tab">
                                <i class="glyphicon glyphicon-ok"></i>
                            </span>
                        </a>
                    </li>
                </ul>
            </div>

           
<div style="box-shadow:10px 10px 40px 30px #F7F7F7 inset;border:solid; border-color:#F5F5F5;border-radius:25px;">
            
              <div class="form">

                      <%= form_for(@correspondence) do |f| %>
                     

                    <% if @correspondence.errors.any? %>
                      <div id="error_explanation">
                        <h2><%= pluralize(@correspondence.errors.count, "error") %> prohibited this correspondence from being saved:</h2>

                        <ul>
                        <% @correspondence.errors.full_messages.each do |msg| %>
                          <li><%= msg %></li>
                        <% end %>
                        </ul>
                      </div>
                    <% end %> 
  
             
  
  
                <div class="tab-content">
                    <div class="tab-pane active" role="tabpanel" id="step1">
                         <%= f.text_field :type_of_correspondence, class: 'form-control', :placeholder => "Type of Correspondence"  %>
 
  
    
                        <%= f.text_field :subject, class: 'form-control', :placeholder => "Subject" %>
                      
                      
                        
                        <%= f.text_field :user_initials, class: 'form-control', :placeholder => "User initials"  %>
                       
                        <ul class="list-inline pull-right">
                            <li><button onClick="location.href='/correspondences'" type="button" class="btn btn-default btn-block " >Back</button></li>
                            <li><button type="button" class="btn btn-primary btn-block next-step">Save and continue</button></li>
                             
                        </ul>
                    </div>
                    <div class="tab-pane" role="tabpanel" id="step2">
                       
                      <%= f.text_field :medium, class: 'form-control', :placeholder => "Medium"  %>
                    
                      <%= f.text_field :address, class: 'form-control', :placeholder => "Address"  %>
                    
                        <ul class="list-inline pull-right">
                            <li><button type="button" class="btn btn-default btn-block prev-step">Previous</button></li>
                           
                            <li><button type="button" class="btn btn-primary btn-block next-step">Save and continue</button></li>
                        </ul>
                    </div>
                    <div class="tab-pane" role="tabpanel" id="step3">
                         <%= f.text_area :description, class: 'form-control' , :placeholder => "Description"  %><br/>
  
                      
                         <%= f.date_select :date, class: 'form-control', :placeholder => "Date"  %>
  
  
                        <ul class="list-inline pull-right">
                            <li><button type="button" class="btn btn-default btn-block prev-step">Previous</button></li>
                            
                            <li><button type="button" class="btn btn-primary btn-block btn-info-full next-step">Save and continue</button></li>
                        </ul>
                    </div>
                    <div class="tab-pane" role="tabpanel" id="complete" style="font-family: Verdana;">

                    
                        <h3>Complete</h3>
                        <p>You have successfully completed all steps.</p>
                      <div class="actions ">
                      <%= f.submit nil, :class => 'btn btn-primary btn-block' %>
                      
                    </div>
                     <button onClick="location.href='/correspondences'" type="button">Back</button>
                    
                    </div>
                    <div class="clearfix"></div>
                </div>
            <% end %>
        </div>
   
   </div>

</div>

</div>
</div>
</div>
</div>
</body>
</html>









































  
  
