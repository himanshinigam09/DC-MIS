                    <li><%= link_to "Departments", '/departments' %></a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.first_name %>&nbsp;<%=current_user.last_name  %><b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><%= link_to "Log out", logout_path, method: "get",:confirm =>'Are you sure you want to log out?' %></li> 
                            
                        </ul>
                    </li> 
                        
                        
                        
                      
                    <% else %> 
                         
                        <li><%= link_to "Login", 'login' %></a></li> 
