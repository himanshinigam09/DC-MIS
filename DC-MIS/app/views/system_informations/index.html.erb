<h1 class="page-header">Listing System Information</h1>
<div class="panel-group" id="accordion" style="background-color:white;">
<div class="row placeholders" >
<div class="col-lg-11" >
<!--toggle sidebar button-->

<!--search-->
  <%= form_tag books_path, :method => 'get' do %>  
      <p>  
        <%= text_field_tag :search, params[:search], :placeholder => 'Enter system name' %>  
        <%= submit_tag "Search", :name => nil %>  
      </p>  
    <% end %>    
<table cellspacing='0'>
<tr>
<th>System Name</th>
<th>Access</th>
<th>OS Installed</th>
<th>RAM</th>
<th>Type of RAM</th>
<th>Type of Monitor</th>
<th>LAN</th>
<th>HDD Capacity</th>
<th>Software Details</th>
<th></th>
<th></th>
<th></th>

</tr>
<% @system_informations.each do |system_information| %>
<tr>
<td><%= system_information.system_name %></td>
<td><%= system_information.access %></td>
<td><%= system_information.os_installed %></td>
<td><%= system_information.ram %></td>
<td><%= system_information.ram_type %></td>
<td><%= system_information.monitor_type %></td>
<td><%= system_information.lan %></td>
<td><%= system_information.hdd_capacity %></td>
<td><%= system_information.sw_details %></td>
<td><%= button_to 'Show', system_information ,method: :get%></td>
<td><%= button_to 'Edit', edit_system_information_path(system_information) ,method: :get %></td>
<td><%= button_to 'Destroy', system_information, method: :delete, :onclick=> "return confirm('Are you sure you want to delete this item?')" %></td>
</tr>
<% end %>
</table><br/><br/>
<%= button_to 'Add System Information', new_system_information_path, method: :get, :class => 'btn btn-primary' %><br/>
<%= paginate @system_informations %>

