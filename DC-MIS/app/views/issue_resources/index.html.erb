<h1 class="page-header">Listing Issued Resources</h1>
<div class="panel-group" id="accordion" style="background-color:white;">
<div class="row placeholders" >
<div class="col-lg-11" >
<!--toggle sidebar button-->

<!--search-->
  <%= form_tag books_path, :method => 'get' do %>  
      <p>  
        <%= text_field_tag :search, params[:search], :placeholder => 'Enter type of resource' %>  
        <%= submit_tag "Search", :name => nil %>  
      </p>  
    <% end %>    
<table cellspacing='0'>
<tr>
    <th>Type of resource</th>
    <th>Issued by</th>
    <th>Issued to</th>
    <th>Issue date</th>
    <th>Issue time</th>
    <th>Submission date</th>
    <th>Submission time</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @issue_resources.each do |issue_resource| %>
  <tr>
    <td><%= issue_resource.type_of_resource %></td>
    <td><%= issue_resource.issued_by %></td>
    <td><%= issue_resource.issued_to %></td>
    <td><%= issue_resource.issue_date %></td>
    <td><%= issue_resource.issue_time %></td>
    <td><%= issue_resource.submission_date %></td>
    <td><%= issue_resource.submission_time %></td>
    <td><%= button_to 'Show', issue_resource,method: :get %></td>
    <td><%= button_to 'Edit', edit_issue_resource_path(issue_resource),method: :get %></td>
    <td><%= button_to 'Destroy', issue_resource, method: :delete, :onclick=> "return confirm('Are you sure you want to delete this item?')"%></td>
  </tr>
<% end %>
</table><br/><br/>
<%= link_to 'New Issue resource', new_issue_resource_path, method: :get, :class => 'btn btn-primary' ,style: "color:white;" %><br/>
<%= paginate @issue_resources %>


